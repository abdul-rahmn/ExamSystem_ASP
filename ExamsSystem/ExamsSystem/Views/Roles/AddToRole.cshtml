@using Microsoft.AspNetCore.Identity
@model List<AspNetUser>

@{
    ViewData["Title"] = "AddToRole";
}

<h1>Add Users <span style="color:green; font-weight:bold ">@ViewBag.role</span> Role</h1>
<hr />
<form asp-action="AddToRole" asp-controller="Roles">
    @foreach (var item in Model)
    {
        <div style="font-size:large" class="form-check">
            <input type="checkbox" style="font-size:larger" name="selectedItems" value="@item.Id" class="form-check-input" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                <span style="font-weight:bold">@item.FirstName @item.LastName</span> | <span style="font-weight:bold">@item.Email</span>
            </label>
        </div>
    }
    <hr />
    <input type="submit" value="submit" class="btn btn-outline-success " />
</form>
<div style="padding-top:10px">
    <a asp-action="Details" asp-controller="Roles" asp-route-id="@ViewBag.role" class="btn btn-info">Back to List</a>
</div>
