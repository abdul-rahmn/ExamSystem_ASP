@model ExamsSystem.Models.AspNetRole

@{
    ViewData["Title"] = "Details";
}
<div>
<h1><span style="font-weight:bold; color:darkgoldenrod">@Model.Name</span> Role</h1>
<a asp-action="AddToRole" asp-controller="Roles" class="btn btn-outline-success">Add To <span style="font-weight:bold">@Model.Name</span></a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success">Edit</a>
    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
</div>
<hr />
<h3>Users In <span style="font-weight:bold; color:darkgoldenrod">@Model.Name</span> Role</h3>
<table class="table table-striped ">
    <thead>
        <tr>
            <th>Firs tName</th>
            <th>Last Name</th>
            <th>UserName</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.users)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <a asp-action="Details" asp-controller="Users" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a> |
                    <a asp-action="RemoveFromRole" asp-route-id="@item.Id" class="btn btn-danger">Remove From Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
