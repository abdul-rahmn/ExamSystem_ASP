@model IEnumerable<ExamsSystem.Models.UserAnswer>

@{
    ViewData["Title"] = "Index";
    string coursename = ViewBag.resu.Course.CourseName;
    Result rs = new Result();
    rs = ViewBag.resu;
}

<h1>@coursename</h1>
<div>
    <a asp-action="StudentResults" class="btn btn-outline-info">Back Results</a>
    <h4>Result</h4>    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(rs => rs.CountTrue)*@
            CountTrue
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(rs => rs.CountTrue)*@
            @rs.CountTrue
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(rs => rs.CountFalse)*@
            CountFalse
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(rs => rs.CountFalse)*@
            @rs.CountFalse
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(rs => rs.Average)*@
            Average
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(rs => rs.Average)*@
            <span style="font-weight:bold">@rs.Average</span>
        </dd>
    </dl>
</div>

<h4>Questions</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 40%;overflow:hidden">
                @Html.DisplayNameFor(model => model.Question.Question1)
            </th>
            <th style="width: 20%;overflow:hidden">
                @Html.DisplayNameFor(model => model.Question.Answer)
            </th>
            <th style="width: 20%;overflow:hidden">
                @Html.DisplayNameFor(model => model.UserAnswer1)
            </th>
            <th style="width: 20%;overflow:hidden">
                @Html.DisplayNameFor(model => model.StateAnswer)
            </th>
            @* <th>
            @Html.DisplayNameFor(model => model.Question.Course.CourseName)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.User.FirstName)
            </th>*@
            @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 40%;overflow:hidden">
                    @Html.DisplayFor(modelItem => item.Question.Question1)
                </td>
                <td style="width: 25%;overflow:hidden">
                    @Html.DisplayFor(modelItem => item.Question.Answer)
                </td>
                <td style="width: 25%;overflow:hidden">
                    @Html.DisplayFor(modelItem => item.UserAnswer1)
                </td>
                <td style="width: 10%;overflow:hidden">
                    @Html.DisplayFor(modelItem => item.StateAnswer)
                    @if (item.StateAnswer)
                    {
                        <span style="color:green">@item.StateAnswer</span>
                    }else{
                        <span style="color:red">@item.StateAnswer</span>
                    }
                </td>
                @*            <td>
            @Html.DisplayFor(modelItem => item.Question.Course.CourseName)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>*@
                @*            <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@
            </tr>
        }
    </tbody>
</table>
